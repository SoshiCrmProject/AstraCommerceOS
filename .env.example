# =============================================================================
# AstraCommerce OS - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# Production: Use connection pooling for DATABASE_URL
DATABASE_URL="postgresql://user:password@localhost:5432/astracommerce?schema=public"
# Production: Direct connection for Prisma migrations (no pooling)
DIRECT_URL="postgresql://user:password@localhost:5432/astracommerce"

# -----------------------------------------------------------------------------
# SUPABASE (Auth & Database)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# APP
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development

# -----------------------------------------------------------------------------
# AUTH
# -----------------------------------------------------------------------------
# Super admin for initial setup
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=change-me-in-production

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=generate-a-random-secret-here

# -----------------------------------------------------------------------------
# AI SERVICES (Optional)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# -----------------------------------------------------------------------------
# MARKETPLACE CONNECTORS (Add as needed)
# -----------------------------------------------------------------------------

# Amazon SP-API
AMAZON_CLIENT_ID=
AMAZON_CLIENT_SECRET=
AMAZON_REFRESH_TOKEN=
AMAZON_REGION=us-east-1

# Shopify
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# Shopee
SHOPEE_PARTNER_ID=
SHOPEE_PARTNER_KEY=

# eBay
EBAY_APP_ID=
EBAY_CERT_ID=
EBAY_DEV_ID=

# Rakuten
RAKUTEN_LICENSE_KEY=
RAKUTEN_SECRET=

# Walmart
WALMART_CLIENT_ID=
WALMART_CLIENT_SECRET=

# Yahoo Shopping Japan
YAHOO_APP_ID=
YAHOO_SECRET=

# Mercari
MERCARI_API_KEY=

# TikTok Shop
TIKTOK_APP_KEY=
TIKTOK_APP_SECRET=

# -----------------------------------------------------------------------------
# SHIPPING INTEGRATIONS (Optional)
# -----------------------------------------------------------------------------
SHIPSTATION_API_KEY=
SHIPSTATION_API_SECRET=

EASYPOST_API_KEY=

# -----------------------------------------------------------------------------
# PAYMENT/BILLING (Optional)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# HEADLESS BROWSER (Auto-Fulfillment)
# -----------------------------------------------------------------------------
# Path to Chrome/Chromium for Playwright (auto-detected if not set)
PLAYWRIGHT_CHROMIUM_EXECUTABLE_PATH=

# Amazon credentials for auto-purchase (encrypted in production)
AMAZON_AUTO_PURCHASE_EMAIL=
AMAZON_AUTO_PURCHASE_PASSWORD=

# -----------------------------------------------------------------------------
# MONITORING & OBSERVABILITY (Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

DATADOG_API_KEY=

# -----------------------------------------------------------------------------
# EMAIL (Optional)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@astracommerce.com

# -----------------------------------------------------------------------------
# QUEUE/WORKERS (Optional - for production)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
BULL_QUEUE_PREFIX=astra_

# -----------------------------------------------------------------------------
# FEATURE FLAGS (Optional)
# -----------------------------------------------------------------------------
ENABLE_AUTO_FULFILLMENT=true
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
